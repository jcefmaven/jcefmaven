    <developers>
        <developer>
            <id>jcef</id>
            <name>JCef Team</name>
            <url>https://github.com/chromiumembedded/java-cef</url>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>friwidev</id>
            <name>FriwiDev</name>
            <email>friwidev@gmail.com</email>
            <url>https://github.com/FriwiDev</url>
